= @user_form.fields_for :user do |usr_form|
  .form-group
    =usr_form.label :first_name, 'First Name', class:'control-label col-sm-2'
    .col-sm-6
      =usr_form.text_field :first_name, size: 30, class:'form-control'
  .form-group
    =usr_form.label :last_name, 'Last Name', class:'control-label col-sm-2'
    .col-sm-6
      =usr_form.text_field :last_name, size: 30, class:'form-control'

  .form-group
    =usr_form.label :email, 'Email', class:'control-label col-sm-2'
    .col-sm-6
      =usr_form.text_field :email, size: 30, class:'form-control'
  .form-group
    =usr_form.label :phone, 'Phone', class:'control-label col-sm-2'
    .col-sm-6
      =usr_form.text_field :phone, size: 30, class:'form-control',
      placeholder: 'Eg. 1-369-374-5803 x9579 (\'1-\' prefix and extension optional)'

  - if policy(usr_form.object).allow?
    .form-group

      - if defined? new_form and new_form
        - pw_placeholder = ''
      - else
        - pw_placeholder = "leave blank if you don't want to change password"

      =usr_form.label :password, 'Password', class:'control-label col-sm-2'
      .col-sm-6
        =usr_form.password_field :password, size: 30, class:'form-control',
                    placeholder: pw_placeholder
    .form-group
      =usr_form.label :password_confirmation, 'Password Confirmation',
                  class:'control-label col-sm-2'
      .col-sm-6
        =usr_form.password_field :password_confirmation, size: 30,
                    class:'form-control',
                    placeholder: pw_placeholder
